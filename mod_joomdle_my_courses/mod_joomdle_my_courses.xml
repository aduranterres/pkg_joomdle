<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
	<name>mod_joomdle_my_courses</name>
	<author>Antonio Duran Terres</author>
	<creationDate>2009-10</creationDate>
	<copyright>Antonio Duran Terres</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>antonio@joomdle.com</authorEmail>
    <authorUrl>www.joomdle.com</authorUrl>
	<version>3.0.0</version>
	<description>MOD_JOOMDLE_MY_COURSES_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Module\JoomdleMyCourses</namespace>
	<files>
		<folder module="mod_joomdle_my_courses">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/mod_joomdle_my_courses.ini</language>
		<language tag="en-GB">language/en-GB/mod_joomdle_my_courses.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="Joomdle\Component\Joomdle\Administrator\Field">

			   <field name="group_by_category" type="radio" default="0" 
					label="COM_JOOMDLE_GROUP_BY_CATEGORY" description="COM_JOOMDLE_GROUP_BY_CATEGORY_DESCRIPTION"
					class="btn-group">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field name="linkto" type="list" default="moodle" label="COM_JOOMDLE_LINKTO" description="COM_JOOMDLE_LINKTO_DESCRIPTION">
					<option value="moodle">Moodle course</option>
					<option value="detail">Joomdle course details view</option>
				</field>
				<field name="nocourses_text" type="textarea" default="" label="COM_JOOMDLE_NOCOURSES_TEXT" rows="3" cols="30" description="COM_JOOMDLE_NOCOURSES_TEXT_DESCRIPTION" />
				<field name="show_unenrol_link" type="radio" default="0" 
					label="COM_JOOMDLE_SHOW_UNENROL_LINK" description="COM_JOOMDLE_SHOW_UNENROL_LINK_DESCRIPTION"
					class="btn-group">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>

				<field type="spacer" label="COM_JOOMDLE_MY_COURSES_INCLUDE_EXCLUDE_INFO" name="myspacer" />
				<field name="courses_shown" multiple="multiple" type="courselist" default="" label="COM_JOOMDLE_SELECT_COURSES_TO_INCLUDE" description="COM_JOOMDLE_SELECT_COURSES_DESCRIPTION" />

				<field name="courses_not_shown" multiple="multiple" type="courselist" default="" label="COM_JOOMDLE_SELECT_COURSES_TO_EXCLUDE" description="COM_JOOMDLE_SELECT_COURSES_DESCRIPTION" />

				<field name="categories_shown" type="coursecategorylist" default="" multiple="multiple" label="COM_JOOMDLE_SELECT_CATEGORIES_TO_INCLUDE"  description="COM_JOOMDLE_SELECT_CATEGORIES_DESCRIPTION" />

				<field name="categories_not_shown" type="coursecategorylist" default="" multiple="multiple" label="COM_JOOMDLE_SELECT_CATEGORIES_TO_EXCLUDE"  description="COM_JOOMDLE_SELECT_CATEGORIES_DESCRIPTION" />

			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
