<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomdle\Component\Joomdle\Administrator\Field">
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="JSEARCH_FILTER"
            description="JSEARCH_FILTER"
        />

        <field
            name="state"
            type="joomdleuser"
            label="COM_JOOMDLE_SELECT_USERS"
            description="COM_JOOMDLE_SELECT_USERS"
            onchange="this.form.submit();"
        >
        </field>
        <field
            name="group_id"
            type="usergrouplist"
            label="COM_JOOMDLE_FILTER_GROUP"
            description="COM_JOOMDLE_FILTER_GROUP_DESC"
            onchange="this.form.submit();"
            >
            <option value="">COM_JOOMDLE_FILTER_USERGROUP</option>
        </field>
    </fields>
    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_JOOMDLE_LIST_FULL_ORDERING"
            description="COM_JOOMDLE_LIST_FULL_ORDERING_DESC"
            onchange="this.form.submit();"
            default="name ASC"
            >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="username ASC">COM_JOOMDLE_USERNAME_ASC</option>
            <option value="username DESC">COM_JOOMDLE_USERNAME_DESC</option>
            <option value="name ASC">COM_JOOMDLE_NAME_ASC</option>
            <option value="name DESC">COM_JOOMDLE_NAME_DESC</option>
            <option value="email ASC">COM_JOOMDLE_EMAIL_ASC</option>
            <option value="email DESC">COM_JOOMDLE_EMAIL_DESC</option>
        </field>
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="JGLOBAL_LIST_LIMIT"
            onchange="this.form.submit();"
        />
    </fields>
</form>
