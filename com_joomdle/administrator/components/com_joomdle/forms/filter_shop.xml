<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomdle\Component\Joomdle\Administrator\Field">
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="JSEARCH_FILTER"
            description="JSEARCH_FILTER"
        />

        <field
            name="producttype"
            type="producttype"
            label="COM_JOOMDLE_SELECT_PRODUCT_TYPE"
            description="COM_JOOMDLE_SELECT_PRODUCT_TYPE"
            hint="JSEARCH_FILTER"
            onchange="this.form.submit();"
        >
        </field>

        <field
            name="published"
            type="status"
            label="COM_CONTENT_FILTER_PUBLISHED"
            description="COM_CONTENT_FILTER_PUBLISHED_DESC"
            onchange="this.form.submit();"
            >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>
    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_JOOMDLE_LIST_FULL_ORDERING"
            description="COM_JOOMDLE_LIST_FULL_ORDERING_DESC"
            onchange="this.form.submit();"
            default="name ASC"
            >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="name ASC">COM_JOOMDLE_HEADING_COURSE_ASC</option>
            <option value="name DESC">COM_JOOMDLE_HEADING_COURSE_DESC</option>
        </field>
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="JGLOBAL_LIST_LIMIT"
            onchange="this.form.submit();"
        />
    </fields>
</form>
